<style>
    .card {
        transition: transform .2s;
    }

    .card:hover {
        transform: scale(1.03)
    }

    section {
        margin-top: 2rem;
    }
</style>
<section class="pt-5 pb-5">
    <div class="container">
        <div class="row">
            <div class="col-6">
                <h3 class="mb-3">Publicaciones pendientes de revision</h3>
            </div>
            <div class="col-12">
                <div class="row">
                    {{#articulosPendientes}}
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <img class="img-fluid" alt="100%x280" src="data:image/jpg;base64,{{imagen}}">
                                <div class="card-body">
                                    <h4 class="card-title">{{titulo}}</h4>
                                    <p class="card-text" maxlength="15">{{cuerpo}}</p>
                                </div>
                                <div class="d-flex justify-content-center">
                                    <div class="p-2">
                                        <form method="post" action="/articulo/verarticuloporcomprobar">
                                            <input id="id" name="id" type="hidden" value="{{id}}">
                                            <button type="submit" class="btn-secondary">Ver</button>
                                        </form>
                                    </div>
                                    <div class="p-2">
                                        <form method="post" action="/articulo/eliminar">
                                            <input id="id" name="id" type="hidden" value="{{id}}">
                                            <button type="submit" class="btn-secondary">Eliminar</button>
                                        </form>
                                    </div>
                                    <div class="p-2">
                                        <form method="post" action="/articulo/publicar">
                                            <input id="id" name="id" type="hidden" value="{{id}}">
                                            <button type="submit" class="btn-secondary">Publicar</button>
                                        </form>
                                    </div>
                                    <div class="p-2">
                                        <form method="post" action="/articulo/correccion">
                                            <input id="id" name="id" type="hidden" value="{{id}}">
                                            <button type="submit" class="btn-secondary">Correccion</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/articulosPendientes}}
                </div>
            </div>
        </div>
    </div>
</section>
