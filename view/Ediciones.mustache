<style type="text/css">
    .tftable {
        font-size: 12px;
        color: #fbfbfb;
        width: 100%;
        border-width: 1px;
        border-color: #686767;
        border-collapse: collapse;
    }

    .tftable th {
        font-size: 12px;
        background-color: #171515;
        border-width: 1px;
        padding: 8px;
        border-style: solid;
        border-color: #686767;
        text-align: left;
    }

    .tftable tr {
        background-color: #2f2f2f;
    }

    .tftable td {
        font-size: 12px;
        border-width: 1px;
        padding: 8px;
        border-style: solid;
        border-color: #686767;
    }

    .tftable tr:hover {
        background-color: #171515;
    }
    .container {
        margin-top: 2rem;
    }
</style>
{{> header}}
<section class="pt-5 pb-5">


    <div class="container">

        <div class="row">
            <div class="col-6">
                <h3 class="mb-3">Ediciones</h3>
            </div>
            <div class="col-12">
                <table class="tftable" border="1">
                    <tr>
                        <th>Edicion</th>
                        <th>Cantidad de articulos</th>
                        <th>Secciones</th>
                        <th>Acciones</th>
                    </tr>
                    {{#ediciones}}
                        <tr>
                            <td>{{edicion}}</td>
                            <td>{{cantidadArticulos}}</td>
                            <td>{{#secciones}} {{nombre}}, {{/secciones}}</td>
                            <td>
                                <form method="post" action="/secciones">
                                    <input id="edicion" name="edicion" type="hidden" value="{{edicion}}">
                                    <input id="producto" name="producto" type="hidden" value="{{producto}}">
                                    <button type="submit"  class="col-12 btn btn-secondary">Ver</button>
                                </form>
                                <form method="post" action="/comprar/edicion">
                                    <input id="edicion" name="edicion" type="hidden" value="{{edicion}}">
                                    <input id="producto" name="producto" type="hidden" value="{{producto}}">
                                    <button type="submit" class="col-12 btn btn-secondary">Comprar</button>
                                </form>
                            </td>
                        </tr>
                    {{/ediciones}}
                </table>
            </div>
        </div>
    </div>
</section>
<div class="col-12" style="display: flex; justify-content: center; display: flex;justify-content: center;margin-bottom: -246px;margin-top: 299px">
    <a href="/" class="btn btn-danger" style="text-align: center">Volver</a>
</div>
{{> footer}}
</body>
</html>










