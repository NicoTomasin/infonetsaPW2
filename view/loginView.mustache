{{> header}}
<div id="register" class="container w-75 shadow">
    <div class="row align-items-stretch">
        <div id="login_image"class="col d-none d-lg-block col-md-5 col-lg-5 col-XL-6">

        </div>
        <div id="login_form" class="col p-5">
            <div class="text-end">
                <img src="../public/logo.png" width="48" alt="">
            </div>
            <h2 class="fw-bold text-center py-5">Iniciar Sesión</h2>
            <form method="post" action="/register/alta">
                <div class="mb-4">
                    <label for="mail" class="form-label">Email</label>
                    <input type="text" class="form-control" name="mail">
                </div>
                <div class="mb-4">
                    <label for="password" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" name="password">
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn-secondary">Inicia Sesión</button>
                </div>
<div>
    <h4 id="slogan" class="text-center">La nueva manera de ver las noticias</h4>
</div>
            </form>

        </div>
    </div>
</div>
{{> footer}}